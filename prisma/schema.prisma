generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name       String
  email      String      @unique
  role       String
  career     String
  nControl   String      @id
  accesses   Access[]
  classrooms Classroom[]
  images     Image[]
}

model Access {
  id          String     @id @default(uuid())
  userId      String
  listTime   DateTime
  classroomId String?
  classroomFK Classroom? @relation(fields: [classroomId], references: [id])
  user        User       @relation(fields: [userId], references: [nControl])
}

model Classroom {
  id        String   @id @default(uuid())
  subject   String
  room      String
  teacherId String
  schedule  DateTime
  accesses  Access[]
  teacherFK User     @relation(fields: [teacherId], references: [nControl])
}

model Image {
  id           String @id @default(uuid())
  userId       String
  imagePath    String
  faceEncoding Json
  user         User   @relation(fields: [userId], references: [nControl])
}

model UnauthorizedAccess {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  imagePath String
}
